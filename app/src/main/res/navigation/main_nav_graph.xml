<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/messagesFragment">
    <fragment
        android:id="@+id/messagesFragment"
        android:name="com.example.prm392_client.ui.messages.MessagesFragment"
        android:label="Chat"
        tools:layout="@layout/fragment_messages" />
    <fragment
        android:id="@+id/contactsFragment"
        android:name="com.example.prm392_client.ui.contacts.ContactsFragment"
        android:label="Contact"
        tools:layout="@layout/fragment_contacts" />
    <fragment
        android:id="@+id/postsFragment"
        android:name="com.example.prm392_client.ui.posts.PostsFragment"
        android:label="Post"
        tools:layout="@layout/fragment_posts" >
        <action
            android:id="@+id/action_postsFragment_to_createPostFragment"
            app:destination="@id/createPostFragment" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.prm392_client.ui.settings.SettingsFragment"
        android:label="Setting"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/accountsFragment"
        android:name="com.example.prm392_client.ui.account.AccountsFragment"
        android:label="Me"
        tools:layout="@layout/fragment_accounts" />
    <fragment
        android:id="@+id/createPostFragment"
        android:name="com.example.prm392_client.ui.posts.CreatePostFragment"
        android:label="Tạo bài viết"
        tools:layout="@layout/fragment_create_post" />

    <!-- res/navigation/main_nav_graph.xml -->
    <fragment
        android:id="@+id/postDetailFragment"
        android:name="com.example.prm392_client.ui.posts.PostDetailFragment"
        android:label="Chi tiết bài viết"
        tools:layout="@layout/fragment_post_detail">

        <argument
            android:name="postId"
            app:argType="string" />
    </fragment>


</navigation>